{
  "name": "@gravity/server",
  "version": "0.1.0",
  "description": "Gravity backend server - Node.js API and game services",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest --passWithNoTests",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@gravity/core": "*",
    "express": "^4.18.0",
    "socket.io": "^4.6.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.0",
    "zod": "^3.22.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.3.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.10.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/cors": "^2.8.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "supertest": "^6.3.0",
    "drizzle-kit": "^0.20.0"
  }
}
